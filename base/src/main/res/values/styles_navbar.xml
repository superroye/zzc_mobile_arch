<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NaviBar_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="NaviBar_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:src">@drawable/selector_icon_back</item>
    </style>

    <style name="NaviBar_left_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor_42</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">9dp</item>
    </style>

    <style name="NaviBar_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">9dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="vg_topbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor_28</item>
    </style>

    <style name="TabLayoutStyle_TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor_a4</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>